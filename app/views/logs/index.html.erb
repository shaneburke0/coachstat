<div class="admin-wrapper">
<h1>Listing logs</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Date</th>
    <th>Method</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @logs.each do |log| %>
  <tr>
    <td><%= log.message %></td>
    <td><%= log.date %></td>
    <td><%= log.method %></td>
    <td><%= link_to 'Show', log %></td>
    <td><%= link_to 'Edit', edit_log_path(log) %></td>
    <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
  	<td></td>
  	<td></td>
  	<td></td>
  	<td></td>
  	<td></td>
  	<td></td>
  	<td></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @logs %>
<%= link_to 'New Log', new_log_path %>
<%= button_to "Store logs in DB", { :controller => "logs", :action => "storelogs"} %> <span>File size: <%= @filesize %></span>
</div>
