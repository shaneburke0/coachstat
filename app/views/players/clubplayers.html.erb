<div class="admin-wrapper">
<h1>Listing players</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Position</th>
    <th>Dob</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Club id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.firstName %></td>
    <td><%= player.lastName %></td>
    <td><%= player.position %></td>
    <td><%= player.dob %></td>
    <td><%= player.height %></td>
    <td><%= player.weight %></td>
    <td><%= player.clubid %></td>
    <td><%= link_to '', player, :class=>"icon-show", :title=>"Show" %></td>
    <td><%= link_to '', edit_player_path(player), :class=>"icon-edit", :title=>"Edit" %></td>
    <td><%= link_to '', player, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"icon-delete", :title=>"Delete" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Player', new_player_path %>
</div>
